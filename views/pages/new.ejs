<% layout('layouts/boilerplate') %>
<section class="bg-image">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h5>Welcome to Build Guild</h5>
                <p>Here, you can upload and submit your build to be featured on the site!</p>
                <p>Fill out the form below and show off that dope a** build</p>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="row mx-auto mt-5">
        <h2>Submit new build</h2>
        <div class="col-lg-6" style="border: 1px solid red; width: 100px; height: 400px">
            <form action="/pages" method="POST">
                <div class="">
                    <label for="Title">New build</label>
                    <input type="text" id="title" name="pages[title]">
                </div>
                <div class="">
                    <label for="description">Description</label>
                    <input type="text" id="description" name="pages[description]">
                </div>
                <button class="btn btn-dark">Submit Build</button>
            </form>
        </div>
    </div>
</section>